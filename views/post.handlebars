        <div class="top">
        <h3>{{user_id}} on {{dateCreated}}</h3>
        </div>
        <div class="bottom">
        <p>{{text}}</p>
        </div>
    </div>
    <br>
     {{/each}}

    <br>
    <div class="combox">
        <h3>Comment?</h3>
