    <br><br>
    <div class="postcard">
        <div class="top">
            <h2>{{post.title}}</h2>
            <h4 id="info">post by {{user.user.username}} on {{post.dateCreated}}</h4>
        </div>
        <div class="bottom">
            <p>{{post.text}}</p>
        </div>
    </div>
    
    <br>
    {{#each comments as |comment|}}
