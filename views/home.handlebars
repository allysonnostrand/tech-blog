
{{#each posts as |post|}}
    <a href="/post/{{id}}" id="post">
        <div class="postcard">
            <div class="top">
                <h2>{{title}}</h2>
                <h4 id="info">post by {{user.username}} on {{dateCreated}}</h4>
            </div>
            <div class="bottom">
                <p>{{text}}</p>
            </div>
        </div>
    </a>
{{/each}}

